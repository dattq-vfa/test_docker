
<!--Fontawesome CDN-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<div class="img_login">
	<div class="container">
		<div class="d-flex justify-content-center h-100">
			<div class="card" style="margin-top: 0px; height: 100%;">
				<div class="card-header" style="padding-top: 5px; padding-bottom: 0px;">
					<h3>Sign Up</h3>
				</div>
				<div class="card-body" style="padding-bottom: 0px; padding-top: 0px; height: auto;">
					<form id="signup_user">
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" class="form-control" placeholder="Full name"  id="name" name="name" required>	
						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" class="form-control" placeholder="User name" id="user" name="user" required>
						</div>
                        <div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" class="form-control" placeholder="Password" id="password" name="password" required>
						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-mobile"></i></i></span>
							</div>
							<input type="text" class="form-control" placeholder="Phone" id="phone" name="phone" required>
						</div>
                        <div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-paper-plane"></i></span>
							</div>
							<input type="text" class="form-control" placeholder="Email" id="email" name="email" required>
						</div>
                        <div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-map-marked-alt"></i></span>
							</div>
							<input type="text" class="form-control" placeholder="Address" id="address" name="address" required>
						</div>
						<div class="row align-items-center remember">
							<input type="checkbox">I accept the Terms of Use & Privacy Policy
                        </div>
						<div class="form-group" style="margin-top: 20px;">
							<input type="submit" value="Sign Up" class="btn login_btn">
                        </div>
                        <div class="d-flex justify-content-center links">
                            Already have an account?<a href="login">Login here</a>
                        </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
    $(document).ready(function(){

        $('#signup_user').on('submit',function(e){
            e.preventDefault();
            let name = $('#name').val();
            let username = $('#user').val();
            let password = $('#password').val();
            let phone = $('#phone').val();
            let email = $('#email').val();
            let address = $('#address').val();
            $.ajax({
                url:'signup_user',
                type:'POST',
                data: { 'name': name, 'username': username,
                    'password': password, 'phone': phone, 
                    'email': email, 'address': address, 
                },
                success: function (result) {
					alert(result);
					window.location.href = 'login'; //chuyen trang
                }
            });
            return false;
        })

    });
</script>